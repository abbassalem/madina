{
  "public": "docs",
  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
  "firestore": {
    "rules": "firestore-rules",
    "indexes": "firestore-indexes"
  },
  "hosting": {
    "public": "docs",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}

